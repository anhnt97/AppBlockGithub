<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_rectangle_not_rounded"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/frame_title_dailog">

            <TextView
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="Giới hạn"
                android:textSize="21sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="86sp"
            android:background="#bcddff">

            <TextView
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:text="Bạn đã sử dụng quá thiết lập giới hạn. Bạn có muỗn tiếp tục sử dụng?"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#63b0fd"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_thoat_thong_bao_gioi_han_1"
                style="@style/TextValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_rectangle_not_rounded"
                android:gravity="center"
                android:text="Thoát"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_ok_thong_bao_gioi_han_1"
                style="@style/TextValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_rectangle_not_rounded"
                android:gravity="center"
                android:text="Ok"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>