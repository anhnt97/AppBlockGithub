<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ngothanh.appblock.view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#5ae6e6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:clickable="true"
            android:onClick="onClick"
            >
            <TextView
                android:id="@+id/btn_limit"
                style="@style/TextValue"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Giới hạn"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:clickable="true"
            android:onClick="onClick"
            >
            <TextView
                android:id="@+id/btn_running"
                style="@style/TextValue"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đang chạy"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_not_chosse"
            android:focusable="true"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_weight="1">
            <TextView
                android:id="@+id/btn_security"
                style="@style/TextValue"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bảo vệ"
                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/list_apps_frament"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17">

    </FrameLayout>
</LinearLayout>
