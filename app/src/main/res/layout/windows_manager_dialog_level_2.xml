<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfffffff"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_rectangle_not_rounded"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/frame_title_dailog">

            <TextView
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="Giới hạn"
                android:textSize="21sp" />

            <!--<ImageView-->
                <!--android:id="@+id/img_icon_thong_bao_gioi_han"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginRight="8dp"-->
                <!--android:background="@drawable/icon_facebook" />-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="#c2e0ff"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/textView3"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin vui lòng nhập lại đoạn mã dưới đây để tiếp tục sử dụng ứng dụng."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="(Lưu ý có phân biệt chữ hoa, chữ thường)"
                android:textColor="#ff0004"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_system_value"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edt_person_value"
                android:layout_alignStart="@+id/edt_person_value"
                android:layout_marginBottom="8dp"
                android:background="@drawable/frame_dailog_isrounded_corners"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="QHDTNFfkxurg12579GRSCRABHTDHTD"
                android:textColor="#002dc2"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edt_person_value"
                style="@style/TextValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginBottom="9dp"
                android:background="@drawable/frame_rectangle_not_rounded"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="QHDTNFfkxurg12579GRSCRABHTDHTD"
                android:textSize="20dp"
                android:textStyle="italic|bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#63b0fd"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_thoat_thong_bao_gioi_han_2"
                style="@style/TextValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_rectangle_not_rounded"
                android:gravity="center"
                android:text="Thoát"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_ok_thong_bao_gioi_han_2"
                style="@style/TextValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/frame_rectangle_not_rounded"
                android:gravity="center"
                android:text="Ok"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>